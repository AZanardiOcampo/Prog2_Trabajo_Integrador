<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    <% if (locals.user != undefined) { %>
     
        <%- include('./partials/headerLogueado') %>

        <% } else { %>
         
            <%- include('./partials/header') %>

    <% } %>
<main>
    <section class="center main-content"> 
        <h1 class="h1-register">Editar Posteo</h1>
        <form action="/posteos/editar/<%= posteo.id %>" method="post">
           <p> <label for="url">Url</label> </p>
            <p><input type="text" name="url" value="<%= posteo.url %>" required></p>
            <p><label for="pieImg">Descripcion</label></p>
            <p><input type="text" name="pieImg" value="<%= posteo.pieImg %>" required></p>
            <button type="submit">Enviar</button>
        </form>
    </section>
</main>
    <%- include('./partials/footer') %>

</body>
</html>