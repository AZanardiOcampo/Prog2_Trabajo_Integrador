<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    
<%- include('./partials/headerLogueado') %>

    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= datos.fotoPerfil %>" alt="">
                <div class="info-usuario">
                    <h1 class="h1-register"><%= datos.nombreUsuario %></h1> 
                    <a class="follow" href="/usuarios/editarPerfil"><i class="fa-solid fa-user-gear"></i></a>
                    <ul class="meta">
                        <li><%= datos.usuariosAPosteos.length %> posts</li>
                        <li>200 seguidores</li>
                        <li>300 seguidos</li>
                    </ul>
                </div>
                
            </section>
            <section class="bottom">
                
                <% for( let i = 0; i < datos.usuariosAPosteos.length; i++ ) { %>
                    <article class="post">
                    <a href="/posteos/detalle/<%= datos.usuariosAPosteos[i].id %>">
                        <img class="romance" src="<%= datos.usuariosAPosteos[i].url %>" alt="">
                    </a>
                    </article>
                </article>
                <% } %>
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>