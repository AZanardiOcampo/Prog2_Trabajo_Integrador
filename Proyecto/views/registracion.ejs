<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>

        <%- include('./partials/header') %>

            <main class="mainRegister">
                <section class="center main-content">
                    <h1 class="h1-register">Registrate</h1>

                    <form class="form-register" action="/registro" method="post">
                        <p><label for="nombre">Nombre</label></p>
                        <p><input type="text" name="nombre" id="nombre"></p>
                        <p><label for="dni">Dni</label></p>
                        <p><input type="number" name="dni" id="dni"></p>
                        <p><label for="fotoPerfil">Foto de perfil (URL)</label></p>
                        <p><input type="text" name="fotoPerfil" id="fotoPerfil"></p>
                        <p><label for="fechaNac">Fecha de nacimiento</label></p>
                        <p><input type="date" name="fechaNac" id="fechaNac"></p>
                        <p><label for="email">Email</label></p>
                        <p><input type="email" name="email" id="email" required></p>
                        <p><label for="contrasenia">Contraseña</label></p>
                        <p><input type="password" name="contrasenia" id="contrasenia" required></p>
                        <% if(locals.errors){ %>
                            <p style="color: red;" class=“mensajeError”>
                                <%= errors.message %>
                            </p>
                            <% } %>
                                <button class="botonDetallePost" type="submit">Registrarse</button>
                                <p class="h1-register">¿Ya tenes una cuenta?</p>
                                <button class="botonDetallePostB"><a class=""
                                    href="/login">Inicia sesion</a></button>
                    </form>

                </section>
            </main>

            <%- include('./partials/footer') %>

    </body>

</html>