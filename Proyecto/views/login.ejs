<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>

<%- include('./partials/header') %>

    <main class="">
        <section class="center main-content">
            <h1 class="h1-register">Iniciar sesion</h1>
            <form action="/login" method="post">
                <p><label for="email">Email</label></p>
                <p><input type="email" name="email" id="email" required></p>
                <p><label for="contrasenia">Contraseña</label></p>
                <p><input type="password" name="contrasenia" id="contrasenia" required></p>
                <p>
                    <input type="checkbox" name="rememberme" id="rememberme">
                    <label for="rememberme" style="color:white">Recordarme</label>
                </p>
                <% if(locals.errors){ %>
                    <p style="color: red;" class="mensajeError">
                        <%= errors.message %>
                    </p>
                <% } %>
                <button class="botonR" type="submit">Iniciar sesión</button>
            </form>
            
        </section>
    </main>

<%- include('./partials/footer') %>

</body>

</html>