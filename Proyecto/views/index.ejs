<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
<%- include('./partials/header') %>
    <main>
        <section class="center main-content">
            
            <% for( let i = 0; i < datos.length; i++ ) { %>
            
            <article class="post">
                <div class="info-usuario ">
                    <img src="https://via.placeholder.com/40" alt="">
                    <h4>
                        <a href="usuarios/detalle/<%= datos[i].usuarioId %>"><%= datos[i].nombreUsuario %></a>
                    </h4>
                </div>
                <div class="post-body">
                    <a href="detallePost.html">
                        <img src= <%= datos[i].url %> alt="">
                    </a>
                </div>
                <ul class="post-reacciones">
                    <li>
                        <i class="fa-regular fa-heart"></i>
                    </li>
                    <li>
                        <i class="fa-regular fa-comment"></i>
                    </li>
                </ul>


                <div class="post-comentarios">
                    <p><h3><%= datos[i].nombreUsuario %>: <%= datos[i].pieImg %></h3></p>
                    <h4>Comentarios</h4>
                    <ul>

                        <% for( let j = 0; j < datos[i].comentarios.length; j++ ) { %>
                          
                            <li>
                                <a href="usuarios/detalle/<%= datos[i].comentarios[j].usuarioId %>"><%= datos[i].comentarios[j].usuario %></a>
                                <span><%= datos[i].comentarios[j].comentario  %></span>
                            </li>

                        <% } %>

                        <a href="detallePost.html">Ver m√°s...</a>

                    </ul>
                </div>
                
            </article>

            <% } %>

        </section>    
    </main>

<%- include('./partials/footer') %>

</body>

</html>